{
  "name": "bettergpt",
  "displayName": "BetterGPT",
  "description": "",
  "version": "0.0.4",
  "preview": true,
  "publisher": "LeoLi",
  "repository": {
    "type": "git",
    "url": "https://github.com/leoli0605/vscode-bettergpt-extension"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "license": "MIT",
  "keywords": [
    "chatgpt",
    "bettergpt",
    "openai",
    "gpt3",
    "gpt-3",
    "gpt",
    "vscode-bettergpt",
    "vscode-bettergpt-extension"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/main.js",
  "contributes": {
    "commands": [
      {
        "command": "bettergpt.translate",
        "title": "BetterGPT: Translate"
      },
      {
        "command": "bettergpt.grammar",
        "title": "BetterGPT: Grammar"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "bettergpt.translate",
          "group": "bettergpt@1"
        },
        {
          "when": "editorHasSelection",
          "command": "bettergpt.grammar",
          "group": "bettergpt@2"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "BetterGPT",
      "properties": {
        "bettergpt.openaiApiKey": {
          "type": "string",
          "default": "",
          "title": "OpenAI API Key",
          "markdownDescription": "Get an API Key for OpenAI [here](https://beta.openai.com/account/api-keys)"
        }
      }
    }
  },
  "scripts": {
    "package": "pnpm vsce package --no-dependencies",
    "publish": "pnpm vsce publish --no-dependencies",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "openai": "^4.20.0"
  }
}
